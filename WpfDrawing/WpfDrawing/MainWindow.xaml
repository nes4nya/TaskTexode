<Window x:Class="WpfDrawing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDrawing"
        mc:Ignorable="d"
        Title="WPF Charts" Height="400" Width="800">
    <Grid x:Name="MainGrid" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="GridForChart" Grid.Column="1" Background="LightGray"  />
        <Button Content="BarChat" Grid.Column="0" Name="BarsButton" Margin="10,29,10,0" VerticalAlignment="Top" Click="ChartsButton_Click" Height="25"/>
        <Button Content="LineChart" Grid.Column="0" Name="LineButton" Margin="10,65,10,0" VerticalAlignment="Top" Click="ChartsButton_Click" Height="25"/>
        <Button Content="PieChart" Grid.Column="0" Name="PieButton" Margin="10,100,10,0" VerticalAlignment="Top" Click="ChartsButton_Click" Height="25"/>
    </Grid>
</Window>
